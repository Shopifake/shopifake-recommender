# Production Environment Configuration

# Environment
ENVIRONMENT=production

# Redis / queue configuration
REDIS_URL=redis://redis:6379/0
EMBEDDINGS_STREAM_KEY=embeddings:jobs
EMBEDDINGS_CONSUMER_GROUP=embeddings-workers
DLQ_STREAM_KEY=embeddings:dlq
BATCH_MAX_MESSAGES=32
BATCH_MAX_WAIT_MS=200
WORKER_CONCURRENCY=4

# Qdrant configuration
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION=products_embeddings

# PostgreSQL Database Configuration
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_HOST=your_postgres_host
POSTGRES_PORT=5432
POSTGRES_DB=your_database_name

# OpenAI configuration
OPENAI_API_KEY=your_prod_key
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
